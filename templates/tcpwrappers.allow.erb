<%

lpattern = Array.new

Array(@pattern).flatten.each do |ptn|
  if ptn == 'any' then
    lpattern.push('ALL')
  elsif ptn !~ /[[:alpha:]]/ then
    lpattern.push(scope.function_bracketize([scope.function_nets2ddq([ptn])]))
  else
    lpattern.push(ptn)
  end
end

t_name = @svc

if t_name.eql?('nil') then
  t_name = @name
end
-%>
<%= t_name %>: <%= lpattern.join(',') %>
